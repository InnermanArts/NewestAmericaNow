<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dennisthicklin.naturalizationgame3.UI.practice_activity"
    android:background="#ffff5c4c"
    android:id="@+id/red">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splashlogo" />

    <TextView
        android:layout_width="920dp"
        android:layout_height="920dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionText"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/options"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="325dp"
        android:id="@+id/options"
        android:layout_above="@+id/home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/a2"
            android:checked="false"
            android:background="#ff647aff"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/a3"
            android:checked="false"
            android:textColor="#ffffff"
            android:background="#ff647aff" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/a4"
            android:checked="false"
            android:textColor="#ffffff"
            android:background="#ff647aff"
            android:layout_alignTop="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="334dp"
            android:layout_height="65dp"
            android:text="Next"
            android:id="@+id/next"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/time"
            android:layout_centerHorizontal="true"
            android:background="#ff647aff" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/time"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/options"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:background="#ff6a7bff" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/a1"
        android:textColor="#ffffff"
        android:background="#ff647aff"
        android:checked="false"
        android:layout_above="@+id/options"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
