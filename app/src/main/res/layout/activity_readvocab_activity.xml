<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dennisthicklin.naturalizationgame3.UI.readvocab_activity"
    android:background="#ffff5c4c"
    android:id="@+id/read">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userSpeech"
        android:layout_marginTop="46dp"
        android:textSize="21sp"
        android:background="@drawable/enterbar"
        android:layout_below="@+id/rWordView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/readButton"
        android:background="@drawable/playwriting"
        android:layout_alignTop="@+id/changeButton"
        android:layout_centerHorizontal="true"
        android:onClick="readTheText" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/changeButton"
        android:background="@drawable/next"
        android:layout_above="@+id/homeRButton"
        android:layout_alignRight="@+id/userSpeech"
        android:layout_alignEnd="@+id/userSpeech"
        android:layout_marginBottom="78dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/recordButton"
        android:background="@drawable/custom_record"
        android:nestedScrollingEnabled="false"
        android:layout_alignBottom="@+id/changeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/rWordView"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/homeRButton"
        android:background="@drawable/splashlogo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
