<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/rt"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dennisthicklin.naturalizationgame3.UI.categoriesPage"
    android:id="@+id/fragmentContainer">

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/AmHistButton"
        android:background="@drawable/hb"
        android:layout_alignTop="@+id/writev"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp
        "

        android:id="@+id/readVButton"
        android:background="@drawable/rb"
        android:layout_alignTop="@+id/govbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/wvb"
        android:id="@+id/writev"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/govbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:id="@+id/govbutton"
        android:background="@drawable/gbb"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="amGov" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/homeAmButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splashlogo" />
</RelativeLayout>
